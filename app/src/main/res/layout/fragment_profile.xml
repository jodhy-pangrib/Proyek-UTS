<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentReservation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <TextView
        android:id="@+id/namaProfil"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/isiNamaProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="28dp"
        android:text="Nama"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/namaProfil"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/jenisKelaminProfil"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="Jenis Kelamin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/namaProfil"
        app:layout_constraintTop_toBottomOf="@id/namaProfil" />

    <TextView
        android:id="@+id/isiJenisKelaminProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Jenis Kelamin"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/jenisKelaminProfil"
        app:layout_constraintTop_toBottomOf="@id/isiNamaProfil" />

    <TextView
        android:id="@+id/umurProfil"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Umur"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="201dp"
        app:layout_constraintStart_toStartOf="@id/jenisKelaminProfil"
        app:layout_constraintTop_toBottomOf="@id/jenisKelaminProfil"/>

    <TextView
        android:id="@+id/isiUmurProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:text="Umur"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/umurProfil"
        app:layout_constraintTop_toBottomOf="@id/isiJenisKelaminProfil" />

    <TextView
        android:id="@+id/alamatProfil"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="250dp"
        app:layout_constraintStart_toStartOf="@id/umurProfil"
        app:layout_constraintTop_toBottomOf="@id/umurProfil"/>

    <TextView
        android:id="@+id/isiAlamatProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:text="Alamat"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/alamatProfil"
        app:layout_constraintTop_toBottomOf="@id/isiUmurProfil" />

    <TextView
        android:id="@+id/emailProfil"
        android:layout_width="62dp"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintStart_toStartOf="@id/alamatProfil"
        app:layout_constraintTop_toBottomOf="@id/alamatProfil"/>

    <TextView
        android:id="@+id/isiEmailProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="28dp"
        android:text="Email"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/emailProfil"
        app:layout_constraintTop_toBottomOf="@id/isiAlamatProfil" />

    <TextView
        android:id="@+id/teleponProfil"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:text="No. Telp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="352dp"
        app:layout_constraintStart_toStartOf="@id/emailProfil"
        app:layout_constraintTop_toBottomOf="@id/emailProfil"/>

    <TextView
        android:id="@+id/isiTeleponProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:text="No. Telp"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/teleponProfil"
        app:layout_constraintTop_toBottomOf="@id/isiEmailProfil" />

    <TextView
        android:id="@+id/usernameProfil"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="413dp"
        app:layout_constraintStart_toStartOf="@id/teleponProfil"
        app:layout_constraintTop_toBottomOf="@id/teleponProfil"/>

    <TextView
        android:id="@+id/isiUsernameProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="Username"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/usernameProfil"
        app:layout_constraintTop_toBottomOf="@id/isiTeleponProfil" />

    <TextView
        android:id="@+id/jenisKamarProfil"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:text="Jenis Kamar"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="466dp"
        app:layout_constraintStart_toStartOf="@id/usernameProfil"
        app:layout_constraintTop_toBottomOf="@id/usernameProfil"/>

    <TextView
        android:id="@+id/isiJenisKamarProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="Jenis Kamar"
        android:textColor="#BABABA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/jenisKamarProfil"
        app:layout_constraintTop_toBottomOf="@id/isiUsernameProfil" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="#13548A"
        android:text="Logout"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@id/jenisKamarProfil"
        app:layout_constraintTop_toBottomOf="@id/jenisKamarProfil"/>
</androidx.constraintlayout.widget.ConstraintLayout>